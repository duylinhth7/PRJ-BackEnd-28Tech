extends ../../layouts/default.pug

block main 
    h1(class="mb-4") Chỉnh sửa tài khoản

    form(
        action=`${prefixAdmin}/accounts/edit/${record.id}?_method=PATCH`
        id="form-create-accounts"
        method='POST'
        enctype="multipart/form-data"
    )
        div(class="form-group")
            label(for="fullName") Họ và tên
            input(
                type="text"
                class="form-control"
                id="fullName"
                name="fullName"
                required
                value= record.fullName
            )
        if(role)
            div(class="form-group")
                label(for="role_id") Chọn phân quyền
                select(name="role_id" class="form-control" id="role_id")
                    each item in roles
                        option(value=item.id 
                            selected = (item.id == record.role_id)
                        ) #{item.title}
        div(class="form-group")
            label(for="email") Email
            input(
                type="text"
                class="form-control"
                id="email"
                name="email"
                value=record.email
            )
        div(class="form-group")
            label(for="passWord") Mật khẩu
            input(
                type="password"
                class="form-control"
                id="passWord"
                name="passWord"
                placeholder="Nếu để trống sẽ dùng lại password cũ"
            )  
        div(class="form-group")
            label(for="avatar") Đường dẫn ảnh
            input(
                type="file"
                class="form-control"
                id="avatar"
                name="avatar"
                accept="image/*"
                inputImage
            )
            img(
                src=record.avatar
                previewImage
                class="preview-image"
            )
            div(
                class="close-preview"
            ) x

        div(class="form-group")
            label(for="phone") Số điên thoại
            input(
                type="text"
                class="form-control"
                id="phone"
                name="phone"
                value = record.phone
            )                
        
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusActive"
                name="status"
                value="active"
                checked = (record.status == "active")
            )
            label(
                for="statusActive"
                class="form-check-label"
            ) Hoạt động
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusActive"
                name="status"
                value="inactive"
                checked = (record.status == "inactive")
            )
            label(
                for="statusActive"
                class="form-check-label"
            ) Dừng hoạt động
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Tạo mới
            
            