extends ../../layouts/default.pug
include  ../../mixins/filter-status.pug
include  ../../mixins/search.pug
include  ../../mixins/table-tree.pug

block main
    h1 Trang danh mục sản phẩm

    .card.mb-3  

        .card-header Bộ lọc và tìm kiếm 
        .card-body 
           .row 
                .col-6 
                    //- Bộ filter status
                    +filter-status(filterStatus)
                     
                .col-6 
                    +search(keyword)

        .card-body 
            .row 
                .col-3 
                    a(  href=`${prefixAdmin}/product-category/create`
                        class="btn btn-outline-success"
                    ) + Thêm mới
        .card-body 
            .row
            table(class="table table-hover table-sm"
                    checkbox-mutil
                )
                thead 
                    tr 
                        th 
                            input(type="checkbox"
                                    name="checkall"
                                )
                        th STT 
                        th Hình ảnh 
                        th Tiêu đề
                        th Trạng thái 
                        th Hành động
                tbody
                    +table-tree(record)
    form(action=""
        method = "POST",
        id = "form-change-status",
        data-path=`${prefixAdmin}/product-category/change-status`
    )

    form(action=""
        method = "POST",
        id = "form-delete-item",
        data-path-delete=`${prefixAdmin}/product-category/delete`
    ) 
    script(src="/admin/js/product-category.js") 

      
                            