extends ../../layouts/default.pug

block main
    h1 Trang danh mục sản phẩm

    .card.mb-3  
        .card-header Danh sách
        .card-body 
            .row 
                .col-3 
                if(role.permissions.includes("role_edit"))
                    a(  href=`${prefixAdmin}/role/create`
                        class="btn btn-outline-success"
                    ) + Thêm mới

      

        .card-body 
            .row
            table(class="table table-hover table-sm"
                    checkbox-mutil
                )
                thead 
                    tr 
                        th 
                            input(type="checkbox"
                                    name="checkall"
                                )
                        th STT 
                        th Nhóm quyền 
                        th Mô tả ngắn
                        th Hành động
                tbody
                    if(record.length > 0)
                        each item, index in record 
                            tr
                                td 
                                    input(type="checkbox"
                                            name="checkall"
                                        )
                                td #{index+1}
                                td #{item.title}
                                td !{item.description}
                                td 
                                    if(role.permissions.includes("role_view"))
                                        a(class="btn btn-sm btn-secondary",
                                            href=`${prefixAdmin}/role/detail/${item.id}`
                                        ) Chi tiết 
                                    if(role.permissions.includes("role_edit"))
                                        a(class="btn btn-sm btn-warning",
                                            href=`${prefixAdmin}/role/edit/${item.id}`
                                        ) Sửa 
                                    if(role.permissions.includes("role_delete"))
                                        a(class="btn btn-sm btn-danger",
                                            button-delete 
                                            data-id = item.id
                                        ) Xóa
                    else 
                        th Không có bản ghi nào
                                








