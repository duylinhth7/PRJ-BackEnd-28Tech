extends ../../layouts/default.pug

block main 
    h1(class="mb-4") Thêm mới sản phẩm

    form(
        action=`${prefixAdmin}/product/create`
        id="form-create-product"
        method='POST'
        enctype="multipart/form-data"
    )
        div(class="form-group")
            label(for="title") Tiêu đề
            input(
                type="text"
                class="form-control"
                id="title"
                name="title"
                required
            )

        div(class="form-group")
            label(for="description") Mô tả
            textarea(
                type="text"
                class="form-control"
                id="description"
                name="description"
            )

        div(class="form-group")
            label(for="thumbnail") Đường dẫn ảnh
            input(
                type="file"
                class="form-control"
                id="thumbnail"
                name="thumbnail"
                accept="image/*"
                inputImage
            )
            img(
                src=""
                previewImage
                class="preview-image"
            )
            div(
                class="close-preview"
            ) x

        div(class="form-group")
            label(for="price") Giá
            input(
                type="number"
                class="form-control"
                id="price"
                name="price"
                value=0
                min=0
                required 
            ) 

        div(class="form-group")
            label(for="discountPercentage") % giảm giá
            input(
                type="number"
                class="form-control"
                id="discountPercentage"
                name="discountPercentage"
                value=0
                min=0
            )                

        div(class="form-group")
            label(for="discountPercentage") Số lượng
            input(
                type="number"
                class="form-control"
                id="stock"
                name="stock"
                value=1
                min=0
            ) 

        div(class="form-group")
            label(for="discountPercentage") Vị trí
            input(
                type="number"
                class="form-control"
                id="position"
                name="position"
                placeholder="Tăng dần"
                min=1
                requiered
            )  
        
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusActive"
                name="status"
                value="active"
                checked
            )
            label(
                for="statusActive"
                class="form-check-label"
            ) Hoạt động
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusActive"
                name="status"
                value="inactive"
            )
            label(
                for="statusActive"
                class="form-check-label"
            ) Dừng hoạt động
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Tạo mới
            
            