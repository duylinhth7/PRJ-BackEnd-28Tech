extends ../../layouts/default.pug
include  ../../mixins/filter-status.pug
include  ../../mixins/search.pug
include  ../../mixins/panigation.pug
include  ../../mixins/form-change-mutil.pug

block main
    h1 Trang sản phẩm

    .card.mb-3 
        .card-header Bộ lọc và tìm kiếm 
        .card-body 
           .row 
                .col-6 
                    //- Bộ filter status
                    +filter-status(filterStatus)
                     
                .col-6 
                    +search(keyword)
                    
                    
        .card.mb-3 
        .card-header Bộ lọc và tìm kiếm 
        .card-body 
            .row 
                .col-8
                    +formChangeMutil(`${prefixAdmin}/product/change-mutil?_method=PATCH`)
                            .form-group 
                                input(
                                    type="text"
                                    name="ids"
                                    value=""
                                    class="form-control"
                                )
                            button(type='submit' class="btn btn-primary") Áp dụng
                .col-3 
                    a(  href=`${prefixAdmin}/product/create`
                        class="btn btn-outline-success"
                    ) + Thêm sản phẩm mới
            table(class="table table-hover table-sm"
                    checkbox-mutil
                )
                thead 
                    tr 
                        th 
                            input(type="checkbox"
                                    name="checkall"
                                )
                        th STT 
                        th Hình ảnh 
                        th Tiêu đề
                        th Giá 
                        th Trạng thái 
                        th Hành động
                tbody
                    each item, index in products
                        tr 
                            td 
                                input(type="checkbox"
                                        name="id"
                                        value=item.id
                                )
                            td #{index+1}
                            td 
                                img(src=item.thumbnail,
                                width="50px",
                                height="auto")
                            td #{item.title}
                            td #{item.price}$
                            td 
                                input(
                                    type="number"
                                    value=item.position
                                    style= "width:50px"
                                    min=1
                                    name="input-position"
                                )
                            td
                                if(item.status == "active")
                                    button(
                                        type="button"
                                        class="badge bg-success"
                                        data-status = item.status 
                                        data-id = item.id
                                        button-change-status
                                    ) Hoạt động
                                else
                                     button(
                                        type="button"
                                        class="badge bg-danger"
                                        data-status = item.status 
                                        data-id = item.id
                                        button-change-status
                                    ) Ngưng hoạn động
                            td
                                a(
                                    class="btn btn-info"
                                    href=`${prefixAdmin}/product/detail/${item.id}`
                                ) Chi tiết
                                a(
                                    class="btn btn-warning btn-sm"
                                    href=`${prefixAdmin}/product/edit/${item.id}`
                                ) Sửa
                                button(class="btn btn-danger btn-sm ml-1"
                                        button-delete 
                                        data-id = item.id
                                        ) Xóa

                            
    +panigation(panigation) 
    form(action=""
        method = "POST",
        id = "form-change-status",
        data-path=`${prefixAdmin}/product/change-status`
    ) 

    form(action=""
        method = "POST",
        id = "form-delete-item",
        data-path-delete=`${prefixAdmin}/product/delete`
    ) 

    script(src="/admin/js/product.js") 