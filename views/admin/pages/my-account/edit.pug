extends ../../layouts/default.pug

block main 
    h1(class="mb-4") Chỉnh sửa thông tin tài khoản

    form(
        action=`${prefixAdmin}/my-account/edit?_method=PATCH`
        id="form-edit-accounts"
        method='POST'
        enctype="multipart/form-data"
    )
        div(class="form-group")
            label(for="fullName") Họ và tên
            input(
                type="text"
                class="form-control"
                id="fullName"
                name="fullName"
                value=user.fullName
                required
            )
        div(class="form-group")
            label(for="email") Email
            input(
                type="text"
                class="form-control"
                id="email"
                value=user.email
                name="email"
            )
        div(class="form-group")
            label(for="passWord") Mật khẩu
            input(
                type="password"
                class="form-control"
                id="passWord"
                name="passWord"
            )  
        div(class="form-group")
            label(for="avatar") Đường dẫn ảnh
            input(
                type="file"
                class="form-control"
                id="avatar"
                name="avatar"
                accept="image/*"
                inputImage
            )
            img(
                src=user.avatar
                previewImage
                class="preview-image"
            )
            div(
                class="close-preview"
            ) x

        div(class="form-group")
            label(for="phone") Số điên thoại
            input(
                type="text"
                class="form-control"
                id="phone"
                name="phone"
                value=user.phone
            )                
        
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusActive"
                name="status"
                value="active"
                checked = user.status==="active"
            )
            label(
                for="statusActive"
                class="form-check-label"
            ) Hoạt động
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusActive"
                name="status"
                value="inactive"
                checked = user.status==="inactive"
            )
            label(
                for="statusActive"
                class="form-check-label"
            ) Dừng hoạt động
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Cập nhật
            
            