include ../mixins/sub-menu
header.header
    .container 
        .row
            .col-3 
                .inner-logo
                    a(href="/")
                        img(src="https://cdn.daca.vn/media/logo/logo.svg")
            .col-9 
                .inner-menu
                    ul 
                        li 
                            a(href="/") Trang chủ
                        li(class="sub-menu")
                            - const pathProduct = "/products"
                            a(href=pathProduct) Sản phẩm
                            +sub-menu(layoutProductCategory, pathProduct)
                        li 
                            a(href="/cart") Giỏ hàng
                        if(users)
                            li
                                a(href="/users/logout") Đăng xuất
                        else
                            li
                                a(href="/users/register") Đăng ký
                            li  
                                a(href="/users/login") Đăng nhập
                        li
                            form(method="GET" action="/search")
                                input(type="text" 
                                    name="keyword"
                                    placeholder ="Nhập từ khóa..."
                                )
                                button(class="btn btn-success"
                                    type="submit"
                                ) Tìm kiếm

