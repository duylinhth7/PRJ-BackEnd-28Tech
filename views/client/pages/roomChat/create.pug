extends ../../layouts/default.pug

block main 
    .container
        h2.mb-4 Tạo nhóm Chat mới
        form(
            action="/room-chat/create"
            method="POST"
        )
            div(
                class="form-group mb-4"
            )
                label(for="title") Tên phòng chat:
                input(
                    id="title"
                    class="form-control"
                    type="text"
                    name="title"
                    required
                )
            div( class="form-group mb-4")
                label Chọn thành viên:
                each user in listFriend
                    div(
                        class="form-check")
                        input(
                            type="checkbox"
                            name= "user_id"
                            value= user.user_id
                        )
                        label #{user.infoFriend.fullName}
            div(class="form-group")
                button(
                    type="submit"
                    class="btn btn-primary mb-4"
                ) Tạo mới