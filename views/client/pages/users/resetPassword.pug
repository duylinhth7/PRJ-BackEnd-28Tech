extends ../../layouts/default.pug
include ../../mixins/box-head.pug
block main 
    .container 
        +box-head("Trang đặt lại mật khẩu")
        .row.justify-content-center
            .col-6
                form(
                    class="mb-4"
                    id="form-reset-password"
                    action="/users/password/reset"  
                    method="POST"
                )
                    div(
                        class="form-group mb-4"
                    )
                        label(for="password") Nhập mật khẩu mới:
                        input(
                            class="form-control"
                            type="password"
                            name="password"
                            id="password"
                            required
                        )
                    div(
                        class="form-group mb-4"
                    )
                        label(for="confimPassword") Xác nhận mật khẩu mới:
                        input(
                            class="form-control"
                            type="password"
                            name="confimPassword"
                            id="confimPassword"
                            required
                        )
                    div(
                        class="form-group mb-4"
                    )
                        button(
                            class="form-control btn btn-primary"
                            type="submit"
                        ) Cập nhật
                