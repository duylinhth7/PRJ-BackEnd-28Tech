extends ../../layouts/default.pug
include ../../mixins/box-head.pug
block main 
    .container 
        +box-head("Lấy lại mật khẩu")
        form(
            class="form-control mb-4"
            id="form-forget-password"
            action="/users/password/forget"
            method="POST"
        )
            div(
                class="form-group mb-4"
            )
                label(for="email") Email:
                input(
                    class="form-control"
                    type="email"
                    name="email"
                    id="email"
                    required
                )
            div(
                class="form-group mb-4"
            )
                button(
                    class="form-control btn btn-primary"
                    type="submit"
                ) Gửi mail xác minh