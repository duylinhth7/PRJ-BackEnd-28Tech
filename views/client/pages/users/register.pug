extends ../../layouts/default.pug
include ../../mixins/box-head.pug
block main 
    .container 
        +box-head("Đăng ký tài khoản")
        form(
            class="form-control mb-4"
            id="form-register"
            action="/users/register"
            method="POST"
        )
            div(
                class="form-group mb-4"
            )
                label(id="fullName") Họ tên:
                input(
                    class="form-control"
                    type="text"
                    name="fullName"
                    id="fullName"
                    required
                )  
            div(
                class="form-group mb-4"
            )
                label(for="phone") Số điện thoại:
                input(
                    class="form-control"
                    type="text"
                    name="phone"
                    id="phone"
                    required
                )
            div(
                class="form-group mb-4"
            )
                label(for="email") Email:
                input(
                    class="form-control"
                    type="text"
                    name="email"
                    id="email"
                    required
                )
            div(
                class="form-group mb-4"
            )
                label(for="password") Mật khẩu:
                input(
                    class="form-control"
                    type="password"
                    name="password"
                    id="password"
                    required
                )
            div(
                class="form-group mb-4"
            )
                button(
                    class="form-control btn btn-success"
                    type="submit"
                ) Đăng ký